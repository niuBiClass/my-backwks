{
  "env": {
    "node": true,
    "mocha": true,
    "jest": true,
    "es6": true,
    "browser": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "legacyDecorators": true
    },
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "jsx-a11y",
    "react-hooks"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "globals": {
    "JSX": true,
    "React": true,
    "NodeJS": true,
    "Promise": true
  },
  "rules": {
    "no-unused-vars": 0,
    "consistent-return": 2,
    "react/prop-types": 0
  }
}
